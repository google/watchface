<WatchFace width="450" height="450" clipShape="CIRCLE">
  <Scene>
    <Group name="animationGroup" x="0" y="0" width="450" height="450">
      <PartAnimatedImage x="75" y="75" width="300" height="300" name="anim"
          pivotX="0.5" pivotY="0.5" angle="45" alpha="200" scaleX="1.2"
          scaleY="1.2" renderMode="SOURCE" tintColor="#FFFF0000"
          blendMode="SRC">
        <AnimationController play="TAP" delayPlay="100" delayRepeat="200"
            repeat="TRUE" loopCount="5" resumePlayBack="TRUE"
            beforePlaying="THUMBNAIL" afterPlaying="FIRST_FRAME" />
        <AnimatedImage resource="animated_example" format="AGIF"
            thumbnail="thumb.png" />
      </PartAnimatedImage>
    </Group>
  </Scene>
</WatchFace>
